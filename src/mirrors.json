{
    "$schema": "./mirrors.schema.json",
    "mirrors": [
        {
            "name": "Alpine Linux",
            "short": "alpine",
            "isDistro": true,
            "rsync": {
                "host": "rsync.alpinelinux.org",
                "src": "alpine",
                "dest": "/storage/alpine",
                "options": "-avzrH --exclude \".~tmp~\"",
                "sync_file": "last-updated",
                "syncs_per_day": 2
            },
            "official": false,
            "homepage": "https://www.alpinelinux.org/"
        },
        {
            "name": "Blender",
            "short": "blender",
            "isDistro": false,
            "rsync": {
                "host": "downloads.blender.org",
                "src": "blender",
                "dest": "/storage/blender",
                "options": "-avzrH --exclude \".~tmp~\"",
                "syncs_per_day": 6
            },
            "official": true,
            "homepage": " https://www.blender.org"
        },
        {
            "name": "MS-DOS",
            "short": "msdos",
            "isDistro": false,
            "static": {
                "location": "/storage/msdos"
            },
            "official": false,
            "homepage": "https://github.com/Microsoft/MS-DOS"
        }
    ]
}