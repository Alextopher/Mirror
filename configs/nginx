# Default server configuration
#
map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}

map $request_uri $redirect_uri {
    /index.html /home;
    /index /home;
    /distributions.html /projects;
    /software.html /projects;
    /stats.html /stats;
    /history.html /history;
}

server {
    listen 80;
    listen [::]:80;
    server_name test.mirror.clarkson.edu;

    # SSL configuration
    listen 443 ssl;
    listen [::]:443 ssl;
    ssl_certificate /etc/letsencrypt/live/mirror.clarkson.edu/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/mirror.clarkson.edu/privkey.pem;

    # Migration from old mirror
    if ( $redirect_uri ) {
        return 302 $redirect_uri;
    }

    # Static file hosting
    location / {
        root /var/www;
        autoindex on;
        # First attempt to serve request as file, then
        # as directory, then fall back to displaying a 404.
        try_files $uri $uri/ =404;
    }

    # # Set of locations that should be proxied to the web server
    location ~ ^/(home|history|stats|projects|favicon.ico|css/|img/|js/|fonts/|api/|map/) {
        proxy_pass http://127.0.0.1:8012$request_uri;
    }

    location /map/socket/ {
        proxy_pass http://127.0.0.1:8012/map/socket/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
    }

    # Proxy pass to the influxdb frontend
    location /influx {
        proxy_pass http://127.0.0.1:8086/;
    }

    # Allow localhost scrapping of status
    location = /status {
        allow 127.0.0.1;
        stub_status;
    }
}
